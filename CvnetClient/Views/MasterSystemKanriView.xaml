<Window
	x:Class="CvnetClient.Views.MasterSystemKanriView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:CvnetClient.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="clr-namespace:CvnetClient.ViewModels"
	Title="システム管理マスタ(管理者用)"
	Width="940"
	Height="616"
	Background="#D6D1F7"
	WindowStartupLocation="CenterScreen"
	mc:Ignorable="d">
	<Window.DataContext>
		<vm:MasterSystemKanriViewModel />
	</Window.DataContext>
	<Grid Margin="8" >
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" MinHeight="516" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<!--  タブ  -->
		<TabControl Grid.Row="0" Margin="0,0,0,8">
			<TabItem Header="基本情報 (Shift+F1)">
				<!--  入力エリア  -->
				<Grid Grid.Row="1" Background="#D6D1F7">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="120" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="120" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
					</Grid.RowDefinitions>

					<!--  1行目  -->
					<TextBlock
						Grid.Row="0"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="自社名" />
					<TextBox
						Grid.Row="0"
						Grid.Column="1"
						Margin="2"
						Text="株式会社ディー・ティー・ピー" />
					<TextBlock
						Grid.Row="0"
						Grid.Column="2"
						VerticalAlignment="Center"
						Text="登録番号" />
					<TextBox
						Grid.Row="0"
						Grid.Column="3"
						Margin="2"
						Background="#E6FFE6"
						Text="T1234567890123" />

					<!--  2行目  -->
					<TextBlock
						Grid.Row="1"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="〒" />
					<TextBox
						Grid.Row="1"
						Grid.Column="1"
						Width="80"
						Margin="2"
						Text="107-0052" />
					<!--  空白  -->
					<TextBlock Grid.Row="1" Grid.Column="2" />
					<TextBlock Grid.Row="1" Grid.Column="3" />

					<!--  3行目  -->
					<TextBlock
						Grid.Row="2"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="住所" />
					<TextBox
						Grid.Row="2"
						Grid.Column="1"
						Width="120"
						Margin="2"
						Text="東京都" />
					<TextBox
						Grid.Row="2"
						Grid.Column="2"
						Width="80"
						Margin="2"
						Text="港区" />
					<TextBox
						Grid.Row="2"
						Grid.Column="3"
						Margin="2"
						Text="赤坂2-14-5　3F" />

					<!--  4行目  -->
					<TextBlock
						Grid.Row="3"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="TEL" />
					<TextBox
						Grid.Row="3"
						Grid.Column="1"
						Width="120"
						Margin="2"
						Text="03-5549-8600" />
					<TextBlock
						Grid.Row="3"
						Grid.Column="2"
						VerticalAlignment="Center"
						Text="FAX" />
					<TextBox
						Grid.Row="3"
						Grid.Column="3"
						Width="120"
						Margin="2"
						Text="03-5549-8602" />

					<!--  5行目  -->
					<TextBlock
						Grid.Row="4"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="管理者Mail" />
					<TextBox
						Grid.Row="4"
						Grid.Column="1"
						Margin="2"
						Background="#E6FFE6"
						Text="cv00@dtpnet.co.jp" />
					<TextBlock Grid.Row="4" Grid.Column="2" />
					<TextBlock Grid.Row="4" Grid.Column="3" />

					<!--  6行目  -->
					<TextBlock
						Grid.Row="5"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="ホームページ" />
					<TextBox
						Grid.Row="5"
						Grid.Column="1"
						Grid.ColumnSpan="3"
						Margin="2"
						Text="http://www.dtpnet.jp/" />

					<!--  7行目  -->
					<TextBlock
						Grid.Row="6"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="メールサーバ" />
					<TextBox
						Grid.Row="6"
						Grid.Column="1"
						Grid.ColumnSpan="3"
						Margin="2"
						Text="mail.dtpnet.co.jp" />

					<!--  8行目  -->
					<TextBlock
						Grid.Row="7"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="拠点名1" />
					<TextBox
						Grid.Row="7"
						Grid.Column="1"
						Margin="2"
						Text="ダイオウ書店" />
					<TextBlock
						Grid.Row="7"
						Grid.Column="2"
						VerticalAlignment="Center"
						Text="拠点名2" />
					<TextBox
						Grid.Row="7"
						Grid.Column="3"
						Margin="2"
						Text="書道口座" />

					<!--  9行目  -->
					<TextBlock
						Grid.Row="8"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="振込先3" />
					<TextBox
						Grid.Row="8"
						Grid.Column="1"
						Margin="2"
						Text="123456780" />
					<TextBlock Grid.Row="8" Grid.Column="2" />
					<TextBlock Grid.Row="8" Grid.Column="3" />

					<!--  10行目  -->
					<TextBlock
						Grid.Row="9"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="メッセージ1" />
					<TextBox
						Grid.Row="9"
						Grid.Column="1"
						Grid.ColumnSpan="3"
						Margin="2"
						Text="テスト環境" />

					<!--  11行目  -->
					<TextBlock
						Grid.Row="10"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="メッセージ2" />
					<TextBox
						Grid.Row="10"
						Grid.Column="1"
						Grid.ColumnSpan="3"
						Margin="2" />

					<!--  12行目  -->
					<TextBlock
						Grid.Row="11"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="作成日" />
					<TextBox
						Grid.Row="11"
						Grid.Column="1"
						Margin="2"
						Background="#FFFFE6"
						Text="2004/07/27 15:51:59" />
					<TextBlock
						Grid.Row="11"
						Grid.Column="2"
						VerticalAlignment="Center"
						Text="修正日" />
					<TextBox
						Grid.Row="11"
						Grid.Column="3"
						Margin="2"
						Background="#E6FFE6"
						Text="2024/11/14 16:19:19" />
				</Grid>

			</TabItem>
			<TabItem Header="システム設定 (Shift+F2)">
				<Grid Margin="0,8,0,0" Background="#D6D1F7">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="140" />
						<ColumnDefinition Width="120" />
						<ColumnDefinition Width="80" />
						<ColumnDefinition Width="120" />
						<ColumnDefinition Width="80" />
						<ColumnDefinition Width="120" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="32" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>

					<!--  1行目  -->
					<TextBlock
						Grid.Row="0"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="期首年月日" />
					<TextBox
						Grid.Row="0"
						Grid.Column="1"
						Margin="2"
						Background="#E6FFE6"
						Text="2013/04/01" />
					<TextBlock
						Grid.Row="0"
						Grid.Column="2"
						VerticalAlignment="Center"
						Text="自社値" />
					<TextBox
						Grid.Row="0"
						Grid.Column="3"
						Width="40"
						Margin="2"
						Background="#E6FFE6"
						Text="99" />
					<TextBlock
						Grid.Row="0"
						Grid.Column="4"
						VerticalAlignment="Center"
						Text="修正有効日数" />
					<TextBox
						Grid.Row="0"
						Grid.Column="5"
						Width="60"
						Margin="2"
						Background="#E6FFE6"
						Text="9999" />
					<TextBlock
						Grid.Row="0"
						Grid.Column="6"
						VerticalAlignment="Center"
						Text="先付有効日数" />
					<TextBox
						Grid.Row="0"
						Grid.Column="7"
						Width="60"
						Margin="2"
						Background="#E6FFE6"
						Text="9999" />

					<!--  2行目  -->
					<TextBlock
						Grid.Row="1"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="処理開始日" />
					<TextBox
						Grid.Row="1"
						Grid.Column="1"
						Margin="2"
						Background="#E6FFE6"
						Text="2000/01/01" />
					<TextBlock
						Grid.Row="1"
						Grid.Column="2"
						VerticalAlignment="Center"
						Text="返品分" />
					<ComboBox
						Grid.Row="1"
						Grid.Column="3"
						Width="80"
						Margin="2"
						Background="#E6FFE6"
						SelectedIndex="0">
						<ComboBoxItem Content="月・日" />
					</ComboBox>
					<TextBlock
						Grid.Row="1"
						Grid.Column="4"
						VerticalAlignment="Center"
						Text="売上端数区分" />
					<ComboBox
						Grid.Row="1"
						Grid.Column="5"
						Width="80"
						Margin="2"
						Background="#E6FFE6"
						SelectedIndex="0">
						<ComboBoxItem Content="2切り捨て" />
					</ComboBox>
					<TextBlock
						Grid.Row="1"
						Grid.Column="6"
						VerticalAlignment="Center"
						Text="仕入端数区分" />
					<ComboBox
						Grid.Row="1"
						Grid.Column="7"
						Width="80"
						Margin="2"
						Background="#E6FFE6"
						SelectedIndex="0">
						<ComboBoxItem Content="2切り捨て" />
					</ComboBox>

					<!--  3行目  -->
					<TextBlock
						Grid.Row="2"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="標準倉庫CD" />
					<TextBox
						Grid.Row="2"
						Grid.Column="1"
						Margin="2"
						Background="#E6FFE6"
						Text="00099" />
					<Button
						Grid.Row="2"
						Grid.Column="2"
						Width="40"
						Margin="2"
						Content="&lt;&lt;" />
					<TextBlock
						Grid.Row="2"
						Grid.Column="3"
						VerticalAlignment="Center"
						Text="修正FLG" />
					<ComboBox
						Grid.Row="2"
						Grid.Column="4"
						Width="120"
						Margin="2"
						Background="#E6FFE6"
						SelectedIndex="0">
						<ComboBoxItem Content="0／ノーチェック" />
					</ComboBox>

					<!--  4行目  -->
					<TextBlock
						Grid.Row="3"
						Grid.Column="0"
						VerticalAlignment="Center"
						Text="標準得意先CD" />
					<ComboBox
						Grid.Row="3"
						Grid.Column="1"
						Width="60"
						Margin="2"
						Background="#E6FFE6"
						SelectedIndex="0">
						<ComboBoxItem Content="1" />
					</ComboBox>
					<TextBlock
						Grid.Row="3"
						Grid.Column="2"
						VerticalAlignment="Center"
						Text="消費税商品CD" />
					<TextBox
						Grid.Row="3"
						Grid.Column="3"
						Width="180"
						Margin="2"
						Background="#E6FFE6"
						Text="999999999999999" />

					<!--  消費税・3段定  -->
					<GroupBox
						Grid.Row="5"
						Grid.RowSpan="8"
						Grid.Column="0"
						Grid.ColumnSpan="8"
						Margin="0,16,0,0"
						Header="消費税・3段定">
						<Grid Margin="8">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="80" />
								<ColumnDefinition Width="120" />
								<ColumnDefinition Width="120" />
								<ColumnDefinition Width="120" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="32" />
								<RowDefinition Height="32" />
								<RowDefinition Height="32" />
								<RowDefinition Height="32" />
							</Grid.RowDefinitions>
							<!--  ヘッダー  -->
							<TextBlock
								Grid.Row="0"
								Grid.Column="1"
								HorizontalAlignment="Center"
								Text="消費税率" />
							<TextBlock
								Grid.Row="0"
								Grid.Column="2"
								HorizontalAlignment="Center"
								Text="新消費税率" />
							<TextBlock
								Grid.Row="0"
								Grid.Column="3"
								HorizontalAlignment="Center"
								Text="新消費税率" />
							<!--  No.1  -->
							<TextBlock
								Grid.Row="1"
								Grid.Column="0"
								VerticalAlignment="Center"
								Text="No.1" />
							<TextBox
								Grid.Row="1"
								Grid.Column="1"
								Width="60"
								Margin="2"
								Text="8%" />
							<TextBox
								Grid.Row="1"
								Grid.Column="2"
								Width="100"
								Margin="2"
								Text="2019/10/01" />
							<TextBox
								Grid.Row="1"
								Grid.Column="3"
								Width="60"
								Margin="2"
								Text="10%" />
							<!--  No.2  -->
							<TextBlock
								Grid.Row="2"
								Grid.Column="0"
								VerticalAlignment="Center"
								Text="No.2" />
							<TextBox
								Grid.Row="2"
								Grid.Column="1"
								Width="60"
								Margin="2"
								Text="8%" />
							<TextBox
								Grid.Row="2"
								Grid.Column="2"
								Width="100"
								Margin="2"
								Text="2019/10/01" />
							<TextBox
								Grid.Row="2"
								Grid.Column="3"
								Width="60"
								Margin="2"
								Text="8%" />
							<!--  No.3  -->
							<TextBlock
								Grid.Row="3"
								Grid.Column="0"
								VerticalAlignment="Center"
								Text="No.3" />
							<TextBox
								Grid.Row="3"
								Grid.Column="1"
								Width="60"
								Margin="2" />
							<TextBox
								Grid.Row="3"
								Grid.Column="2"
								Width="100"
								Margin="2"
								Text="1901/01/01" />
							<TextBox
								Grid.Row="3"
								Grid.Column="3"
								Width="60"
								Margin="2" />
						</Grid>
					</GroupBox>
				</Grid>
			</TabItem>
		</TabControl>
		<!--  ボタンエリア  -->
		<StackPanel
			Grid.Row="1"
			Margin="0,8,0,0"
			HorizontalAlignment="Right"
			Orientation="Horizontal" Width="324">
			<Button
				Width="100"
				Height="32"
				Margin="4"
				Content="修正(F6)" />
			<Button
				Width="100"
				Height="32"
				Margin="4"
				Content="印刷(F9)" />
			<Button
				Width="100"
				Height="32"
				Margin="4"
				Command="{Binding ExitCommand}"
				Content="戻る(ESC)"
				IsCancel="True" />
		</StackPanel>
	</Grid>
</Window>
