<Window
	x:Class="CvnetClient.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:CvnetClient"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="clr-namespace:CvnetClient.ViewModels"
	Title="Creative Vision.net"
	Width="1250"
	Height="800"
	Background="#D6D6FF"
	FontFamily="Meiryo UI"
	Icon="/cvnet.ico"
	WindowStartupLocation="CenterScreen"
	mc:Ignorable="d">
	<Window.DataContext>
		<vm:MenuViewModels />
	</Window.DataContext>
	<Window.InputBindings>
		<KeyBinding Key="F12" Command="{Binding DoLoginCommand}" />
	</Window.InputBindings>
	<behaviors:Interaction.Triggers>
		<behaviors:EventTrigger EventName="ContentRendered">
			<behaviors:InvokeCommandAction Command="{Binding InitCommand}" />
		</behaviors:EventTrigger>
	</behaviors:Interaction.Triggers>
	<!--
	<Grid>
		<Button Content="テスト" HorizontalAlignment="Left" Height="34" Margin="134,50,0,0" VerticalAlignment="Top" Width="89" Command="{Binding DoTestCommand}"/>
		<Button Content="終了" HorizontalAlignment="Left" Height="34" Margin="672,45,0,0" VerticalAlignment="Top" Width="89" Command="{Binding ExitCommand}"/>
		<Label Content="{Binding ExeVer}" HorizontalAlignment="Left" Height="35" Margin="31,104,0,0" VerticalAlignment="Top" Width="160"/>

	</Grid>
	
	-->
	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="240" />
			<ColumnDefinition Width="30" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="10" />
			<ColumnDefinition Width="10" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="60" />
			<RowDefinition Height="40" />
			<RowDefinition Height="*" />
			<RowDefinition Height="40" />
			<RowDefinition Height="40" />
			<RowDefinition Height="30" />
			<RowDefinition Height="30" />
		</Grid.RowDefinitions>

		<!--  左メニュー  -->
		<Border
			Grid.Row="0"
			Grid.RowSpan="6"
			Grid.Column="0"
			Background="Black"
			CornerRadius="2">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="30" />
					<RowDefinition Height="*" />
					<RowDefinition Height="120" />
					<RowDefinition Height="30" />
				</Grid.RowDefinitions>
				<TextBlock
					Grid.Row="0"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontSize="16"
					FontWeight="Bold"
					Foreground="White"
					Text="MENU" />
				<ListBox
					x:Name="MenuSub"
					Grid.Row="1"
					Margin="0,0,0,0"
					DisplayMemberPath="Header"
					FontSize="14"
					ItemsSource="{Binding ListMenu}"
					SelectedItem="{Binding SelectedMenu, Mode=TwoWay}">
					<!--
					<ListBoxItem Content="マスタ" />
					<ListBoxItem Content="マスタ補助" />
					<ListBoxItem Content="管理メニュー" />
					<ListBoxItem Content="予算" />
					<ListBoxItem Content="本発注/入荷予定" />
					<ListBoxItem Content="発注" />
					<ListBoxItem Content="仕入" />
					<ListBoxItem Content="受注/展示会" />
					<ListBoxItem Content="売上" />
					<ListBoxItem Content="配分" />
					<ListBoxItem Content="在庫管理" />
					<ListBoxItem Content="棚卸" />
					<ListBoxItem Content="売上分析1" />
					<ListBoxItem Content="売上分析2" />
					<ListBoxItem Content="C.P.A" />
					<ListBoxItem Content="HHT" />
					<ListBoxItem Content="掛管理" />
					<ListBoxItem Content="月次/更新処理" />
					<ListBoxItem Content="Loyal Customer" />
					<ListBoxItem Content="Time-Navi" />
					<ListBoxItem Content="店舗" />
					<ListBoxItem Content="物流" />
					<ListBoxItem Content="CVPOS用帳票・免税" />
					<ListBoxItem Content="オプション" />
					-->
				</ListBox>
				<!--  カレンダー（簡易）  -->
				<Calendar Grid.Row="2" Margin="2" />
				<TextBlock
					Grid.Row="3"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontSize="16"
					FontWeight="Bold"
					Foreground="White"
					Text="{Binding Now, StringFormat='{}{0:MM/dd HH:mm}'}" />
			</Grid>
		</Border>

		<Grid Grid.Row="0" Grid.Column="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="8*" />
				<ColumnDefinition Width="2*" />
			</Grid.ColumnDefinitions>
			<!--  タイトル  -->
			<TextBlock
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				FontSize="28"
				FontWeight="Normal"
				Text="Creative Vision.net User00" />
			<!--  右上 情報欄  -->
			<TextBox
				Grid.Column="1"
				Margin="0,0,0,5"
				Text="." />
		</Grid>


		<!--  サブタイトル  -->
		<TextBox
			Grid.Row="1"
			Grid.Column="2"
			Height="28"
			Margin="0,0,0,0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Center"
			FontSize="16"
			FontWeight="Bold"
   Text="{Binding SelectedMenu.Header, StringFormat='&lt;&lt; {0} >>'}"			
			TextAlignment="Center" />

		<!--  メインボタン群  -->
		<Grid
			Grid.Row="2"
			Grid.RowSpan="2"
			Grid.Column="2"
			Margin="0,0,0,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="60" />
				<RowDefinition Height="60" />
				<RowDefinition Height="60" />
				<RowDefinition Height="60" />
				<RowDefinition Height="60" />
				<RowDefinition Height="60" />
				<RowDefinition Height="60" />
				<RowDefinition Height="60" />
				<RowDefinition Height="60" />
			</Grid.RowDefinitions>
			<!--  左列  -->
			<Button
				Grid.Row="0"
				Grid.Column="0"
				Margin="4"
				
				Command="{Binding DoTest2Command}"
				Content="{Binding SelectedMenu.SubItems[0].Header}"
				FontSize="20" />
			<Button
				Grid.Row="1"
				Grid.Column="0"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[1].Header}"
				FontSize="20" />
			<Button
				Grid.Row="2"
				Grid.Column="0"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[2].Header}"
				FontSize="20" />
			<Button
				Grid.Row="3"
				Grid.Column="0"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[3].Header}"
				FontSize="20" />
			<Button
				Grid.Row="4"
				Grid.Column="0"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[4].Header}"
				FontSize="20" />
			<Button
				Grid.Row="5"
				Grid.Column="0"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[5].Header}"
				FontSize="20" />
			<Button
				Grid.Row="6"
				Grid.Column="0"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[6].Header}"
				FontSize="20" />
			<Button
				Grid.Row="7"
				Grid.Column="0"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[7].Header}"
				FontSize="20" />
			<Button
				Grid.Row="8"
				Grid.Column="0"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[8].Header}"
				FontSize="20" />
			<Button
				Grid.Row="9"
				Grid.Column="0"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[9].Header}"
				FontSize="20" />
			<!--  右列  -->
			<Button
				Grid.Row="0"
				Grid.Column="1"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[10].Header}"
				FontSize="20" />
			<Button
				Grid.Row="1"
				Grid.Column="1"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[11].Header}"
				FontSize="20" />
			<Button
				Grid.Row="2"
				Grid.Column="1"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[12].Header}"
				FontSize="20" />
			<Button
				Grid.Row="3"
				Grid.Column="1"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[13].Header}"
				FontSize="20" />
			<Button
				Grid.Row="4"
				Grid.Column="1"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[14].Header}"
				FontSize="20" />
			<Button
				Grid.Row="5"
				Grid.Column="1"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[15].Header}"
				FontSize="20" />
			<Button
				Grid.Row="6"
				Grid.Column="1"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[16].Header}"
				FontSize="20" />
			<Button
				Grid.Row="7"
				Grid.Column="1"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[17].Header}"
				FontSize="20" />
			<Button
				Grid.Row="8"
				Grid.Column="1"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[18].Header}"
				FontSize="20" />
			<Button
				Grid.Row="9"
				Grid.Column="1"
				Margin="4"
				Content="{Binding SelectedMenu.SubItems[19].Header}"
				FontSize="20" />

		</Grid>

		<!--  テスト環境表示  -->
		<TextBlock
			Grid.Row="4"
			Grid.Column="2"
			Margin="4,0,0,0"
			FontWeight="Bold"
			Foreground="Blue"
			Text="{Binding BottomMessage}" />

		<!--  CLOSEボタン  -->
		<Button
			Grid.Row="5"
			Grid.Column="2"
			Height="36"
			Margin="0,0,0,0"
			Command="{Binding ExitCommand}"
			Content="CLOSE"
			FontSize="20" />

		<!--  下部バー  -->
		<Border
			Grid.Row="6"
			Grid.Column="0"
			Grid.ColumnSpan="5"
			Height="24"
			VerticalAlignment="Bottom"
			Background="#E0E0FF">
			<TextBlock
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				FontSize="12"
				Foreground="#666"
				Text="（キー操作説明）次項目へはTab、前項目へはShift+Tab。ボタンはSPACEかEnterで実行。再ログインはF12。" />
		</Border>
	</Grid>
</Window>
